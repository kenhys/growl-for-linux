#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export DEB_BUILD_MAINT_OPTIONS=hardening=+all,-pie

%:
	dh  $@ --with autoreconf

override_dh_install:
	find $(CURDIR)/debian -name *.la -delete
	find $(CURDIR)/debian -name *.a -delete
	find $(CURDIR)/debian -name libtweets* -delete
	dh_install

# Do not call needless ldconfig
# Fix W:postinst-has-useless-call-to-ldconfig lintian warning
override_dh_makeshlibs:
	dh_makeshlibs --noscripts
