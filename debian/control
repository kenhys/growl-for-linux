Package: growl-for-linux
Architecture: any
Depends:
 libglib2.0-0,
 libgtk2.0-0,
 libnotify4,
 libappindicator1,
 libcurl3,
 libxml2,
 libsqlite3-0,
 libdbus-glib-1-2,
